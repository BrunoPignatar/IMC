<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BRUNOGAY.MainPage">

    <StackLayout>

        <Frame BackgroundColor="#2196f3" Padding="24" CornerRadius="0">
            <Label Text="Cálculo IMC:" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Label Text="insira o seu peso em KG: Ex > 58.50" FontSize="15"/>
        <Entry x:Name="txt_peso"
            Placeholder="Peso em KG"
           
    />

        <Label Text="insira a sua altura em M: " FontSize="15" />
            <Entry x:Name="txt_altura"
            Placeholder="Altura em M"
            
    />



                <Button Text="Calcular IMC"
       FontSize="Large"
       Clicked="Button_Clicked"
       BackgroundColor="Aquamarine"
    />

        <Image Source="https://www.ricardogozzano.com.br/wp-content/uploads/2020/03/tabela_imc.png"
               HeightRequest="300"/>


    </StackLayout>
            </ContentPage>   